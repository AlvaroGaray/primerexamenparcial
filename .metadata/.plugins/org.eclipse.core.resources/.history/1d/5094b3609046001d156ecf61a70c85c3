package primerexamenparcial;
import java.util.*;

public class CalculoDepreciacionActivos {

	public static void main(String[] args) {

		Scanner es=new Scanner(System.in);

		System.out.println("Por cual metodo desea que se realize la Depreciacion?\n");
		System.out.println("1.Metodo de Linea Recta\n2.Metodo de unidades producidas");
		System.out.println("3.Metodo de Saldos Creciente\n4.Metodo de suma de los digitos de los años");
		int dm=es.nextInt();

		do {
			switch(dm) {
			case 1:
				System.out.println("Metodo de Linea Recta");
				
			break;
			
			case 2:
				System.out.println("Metodo de Unidades Producidas");
				
				break;
				
			case 3:
				System.out.println("Metodo de Saldos Creciente");
				
				break;
				
			case 4:
				System.out.println("Metodo de Suma de los digitos de los años");
				
				break;
				
				default:
					System.out.println("Opcion Incorrecta");
			}
		}while(dm>0);


	}


}
